<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="Window">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#22150F" />
          <GradientStop Offset="0.48" Color="#1A120F" />
          <GradientStop Offset="1" Color="#120D0B" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="Foreground" Value="#FFF1E7" />
    <Setter Property="FontFamily" Value="Sora, Segoe UI Variable, Segoe UI, Arial" />
  </Style>

  <Style Selector="TextBlock.header">
    <Setter Property="FontSize" Value="22" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.heroTitle">
    <Setter Property="FontSize" Value="32" />
    <Setter Property="FontWeight" Value="Bold" />
  </Style>

  <Style Selector="TextBlock.heroMeta">
    <Setter Property="Foreground" Value="#FFDCC4" />
    <Setter Property="FontSize" Value="13" />
  </Style>

  <Style Selector="TextBlock.sectionTitle">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.subtle">
    <Setter Property="Foreground" Value="#DABEA9" />
  </Style>

  <Style Selector="Border.panel">
    <Setter Property="Background" Value="#302117" />
    <Setter Property="BorderBrush" Value="#7B553A" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="Padding" Value="14" />
    <Setter Property="BoxShadow" Value="0 12 26 0 #3C120A08" />
  </Style>

  <Style Selector="Border.heroPanel">
    <Setter Property="Padding" Value="18" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="BorderBrush" Value="#A66A42" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#5B341F" />
          <GradientStop Offset="1" Color="#7B4A2A" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="BoxShadow" Value="0 16 34 0 #441A0A0E" />
  </Style>

  <Style Selector="Border.loginCard">
    <Setter Property="Padding" Value="20" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="#7C583D" />
    <Setter Property="Background" Value="#2B1E16" />
    <Setter Property="BoxShadow" Value="0 20 42 0 #52180C10" />
  </Style>

  <Style Selector="Border.featurePanel">
    <Setter Property="Padding" Value="22" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="#7E5A3F" />
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#3B271A" />
          <GradientStop Offset="1" Color="#2A1C14" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="BoxShadow" Value="0 18 40 0 #3A140A0D" />
  </Style>

  <Style Selector="Border.settingsDrawer">
    <Setter Property="Margin" Value="0" />
    <Setter Property="Padding" Value="18" />
    <Setter Property="CornerRadius" Value="16,0,0,16" />
    <Setter Property="BorderBrush" Value="#7A553A" />
    <Setter Property="BorderThickness" Value="1,0,0,0" />
    <Setter Property="Background" Value="#241A14" />
  </Style>

  <Style Selector="Button">
    <Setter Property="CornerRadius" Value="11" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="Background" Value="#D46E35" />
    <Setter Property="BorderBrush" Value="#E89A65" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="#FFF5EE" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.55" />
  </Style>

  <Style Selector="Button.ghostButton">
    <Setter Property="Background" Value="#4C2E1E" />
    <Setter Property="BorderBrush" Value="#996548" />
  </Style>

  <Style Selector="Button.iconButton">
    <Setter Property="Width" Value="40" />
    <Setter Property="Height" Value="40" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    <Setter Property="Background" Value="#573622" />
    <Setter Property="BorderBrush" Value="#A16A49" />
  </Style>

  <Style Selector="Button.playButton">
    <Setter Property="FontSize" Value="17" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Background" Value="#33A874" />
    <Setter Property="BorderBrush" Value="#7CE1B5" />
    <Setter Property="Padding" Value="18,11" />
  </Style>

  <Style Selector="TextBox, ComboBox, NumericUpDown">
    <Setter Property="Background" Value="#211710" />
    <Setter Property="BorderBrush" Value="#765138" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Foreground" Value="#FFF0E5" />
    <Setter Property="Padding" Value="10,8" />
  </Style>

  <Style Selector="ListBox">
    <Setter Property="Background" Value="#221810" />
    <Setter Property="BorderBrush" Value="#765038" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="8" />
  </Style>

  <Style Selector="ListBoxItem">
    <Setter Property="Padding" Value="8" />
    <Setter Property="Margin" Value="0,2,0,2" />
    <Setter Property="CornerRadius" Value="10" />
  </Style>

  <Style Selector="ListBoxItem:selected">
    <Setter Property="Background" Value="#4A2F20" />
    <Setter Property="BorderBrush" Value="#B07C57" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>
</Styles>
