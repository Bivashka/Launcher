<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Style Selector="Window">
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#0A1425" />
          <GradientStop Offset="0.48" Color="#0D1B31" />
          <GradientStop Offset="1" Color="#10213A" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="Foreground" Value="#F1F7FF" />
    <Setter Property="FontFamily" Value="Sora, Manrope, Segoe UI Variable, Segoe UI" />
  </Style>

  <Style Selector="TextBlock.header">
    <Setter Property="FontSize" Value="22" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="TextBlock.heroTitle">
    <Setter Property="FontSize" Value="32" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Foreground" Value="#F3F8FF" />
  </Style>

  <Style Selector="TextBlock.heroMeta">
    <Setter Property="Foreground" Value="#BED6F5" />
    <Setter Property="FontSize" Value="13" />
  </Style>

  <Style Selector="TextBlock.sectionTitle">
    <Setter Property="FontSize" Value="18" />
    <Setter Property="FontWeight" Value="SemiBold" />
    <Setter Property="Foreground" Value="#EEF5FF" />
  </Style>

  <Style Selector="TextBlock.subtle">
    <Setter Property="Foreground" Value="#A7BEDC" />
  </Style>

  <Style Selector="Border.panel">
    <Setter Property="Background" Value="#1A2944CC" />
    <Setter Property="BorderBrush" Value="#3F6BA4" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="16" />
    <Setter Property="Padding" Value="14" />
    <Setter Property="BoxShadow" Value="0 12 28 0 #040E1A88" />
  </Style>

  <Style Selector="Border.heroPanel">
    <Setter Property="Padding" Value="18" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="BorderBrush" Value="#4E81C7" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#1A3A66CC" />
          <GradientStop Offset="0.58" Color="#16335BCC" />
          <GradientStop Offset="1" Color="#102641CC" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="BoxShadow" Value="0 16 34 0 #07122790" />
  </Style>

  <Style Selector="Border.loginCard">
    <Setter Property="Padding" Value="20" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="#5E87BE" />
    <Setter Property="Background" Value="#0F1E33D9" />
    <Setter Property="BoxShadow" Value="0 22 44 0 #04102499" />
  </Style>

  <Style Selector="Border.featurePanel">
    <Setter Property="Padding" Value="22" />
    <Setter Property="CornerRadius" Value="18" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="BorderBrush" Value="#4B79B3" />
    <Setter Property="Background">
      <Setter.Value>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
          <GradientStop Offset="0" Color="#17345CCC" />
          <GradientStop Offset="0.52" Color="#102845CC" />
          <GradientStop Offset="1" Color="#0D2139CC" />
        </LinearGradientBrush>
      </Setter.Value>
    </Setter>
    <Setter Property="BoxShadow" Value="0 18 40 0 #030E1F8C" />
  </Style>

  <Style Selector="Border.settingsDrawer">
    <Setter Property="Margin" Value="0" />
    <Setter Property="Padding" Value="18" />
    <Setter Property="CornerRadius" Value="16,0,0,16" />
    <Setter Property="BorderBrush" Value="#5E89C0" />
    <Setter Property="BorderThickness" Value="1,0,0,0" />
    <Setter Property="Background" Value="#0E1A2DD9" />
  </Style>

  <Style Selector="Button">
    <Setter Property="CornerRadius" Value="11" />
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="Background" Value="#2C76F0" />
    <Setter Property="BorderBrush" Value="#5FA0FF" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="Foreground" Value="#F7FBFF" />
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <Style Selector="Button:pointerover">
    <Setter Property="Background" Value="#3A85FF" />
    <Setter Property="BorderBrush" Value="#86BAFF" />
  </Style>

  <Style Selector="Button:pressed">
    <Setter Property="Background" Value="#2366D8" />
  </Style>

  <Style Selector="Button:disabled">
    <Setter Property="Opacity" Value="0.55" />
  </Style>

  <Style Selector="Button.ghostButton">
    <Setter Property="Background" Value="#1B3358" />
    <Setter Property="BorderBrush" Value="#4B77AE" />
  </Style>

  <Style Selector="Button.ghostButton:pointerover">
    <Setter Property="Background" Value="#22406D" />
  </Style>

  <Style Selector="Button.iconButton">
    <Setter Property="Width" Value="40" />
    <Setter Property="Height" Value="40" />
    <Setter Property="Padding" Value="0" />
    <Setter Property="FontSize" Value="16" />
    <Setter Property="FontFamily" Value="Segoe MDL2 Assets" />
    <Setter Property="Background" Value="#173155" />
    <Setter Property="BorderBrush" Value="#4C78AE" />
  </Style>

  <Style Selector="Button.iconButton:pointerover">
    <Setter Property="Background" Value="#21426D" />
  </Style>

  <Style Selector="Button.playButton">
    <Setter Property="FontSize" Value="17" />
    <Setter Property="FontWeight" Value="Bold" />
    <Setter Property="Background" Value="#10A879" />
    <Setter Property="BorderBrush" Value="#67D9B1" />
    <Setter Property="Padding" Value="18,11" />
  </Style>

  <Style Selector="Button.playButton:pointerover">
    <Setter Property="Background" Value="#14B884" />
  </Style>

  <Style Selector="TextBox, ComboBox, NumericUpDown">
    <Setter Property="Background" Value="#0B182BD9" />
    <Setter Property="BorderBrush" Value="#436A9F" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="10" />
    <Setter Property="Foreground" Value="#EFF6FF" />
    <Setter Property="Padding" Value="10,8" />
  </Style>

  <Style Selector="TextBox:focus">
    <Setter Property="BorderBrush" Value="#7DB8FF" />
  </Style>

  <Style Selector="ComboBox:focus">
    <Setter Property="BorderBrush" Value="#7DB8FF" />
  </Style>

  <Style Selector="NumericUpDown:focus">
    <Setter Property="BorderBrush" Value="#7DB8FF" />
  </Style>

  <Style Selector="ListBox">
    <Setter Property="Background" Value="#0D1B2FD9" />
    <Setter Property="BorderBrush" Value="#3E669A" />
    <Setter Property="BorderThickness" Value="1" />
    <Setter Property="CornerRadius" Value="12" />
    <Setter Property="Padding" Value="8" />
  </Style>

  <Style Selector="ListBoxItem">
    <Setter Property="Padding" Value="8" />
    <Setter Property="Margin" Value="0,2,0,2" />
    <Setter Property="CornerRadius" Value="10" />
  </Style>

  <Style Selector="ListBoxItem:pointerover /template/ ContentPresenter">
    <Setter Property="Background" Value="#1A3154" />
  </Style>

  <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
    <Setter Property="Background" Value="#23456F" />
    <Setter Property="BorderBrush" Value="#6EA2E6" />
    <Setter Property="BorderThickness" Value="1" />
  </Style>
</Styles>
