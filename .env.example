# Public
PUBLIC_BASE_URL=http://localhost:8080
VITE_API_BASE_URL=http://localhost:8080
ADMIN_ALLOWED_ORIGINS=http://localhost:5173

# Ports
API_PORT=8080
ADMIN_PORT=5173
POSTGRES_PORT=5432
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# Installer helper values (used by deploy/installer.sh)
INSTALL_PUBLIC_HOST=localhost
INSTALL_USE_SSL=false

# Database
POSTGRES_DB=bivlauncher
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DB_CONN=Host=db;Port=5432;Database=bivlauncher;Username=postgres;Password=postgres

# Security
JWT_SECRET=change_me_to_a_long_random_secret
# Used for backend HMAC-SHA256 of launcher HWID fingerprints.
HWID_HMAC_SALT=change_me_hwid_salt

# Object storage (S3/MinIO)
S3_USE_S3=true
S3_LOCAL_ROOT=/app/storage
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=launcher-files
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_FORCE_PATH_STYLE=true
S3_USE_SSL=false
S3_AUTO_CREATE_BUCKET=true

# Build pipeline
BUILD_SOURCE_ROOT=/app/BuildSources
BUILD_DEFAULT_JVM_ARGS=-Xms1024M -Xmx2048M
BUILD_DEFAULT_GAME_ARGS=

# News auto-sync (optional fallback if DB setting is not configured)
NEWS_SYNC_ENABLED=false
NEWS_SYNC_INTERVAL_MINUTES=60

# News retention (optional fallback if DB setting is not configured)
NEWS_RETENTION_ENABLED=false
NEWS_RETENTION_MAX_ITEMS=500
NEWS_RETENTION_MAX_AGE_DAYS=30

# Runtime retention (optional fallback if DB setting is not configured)
RUNTIME_RETENTION_ENABLED=false
RUNTIME_RETENTION_INTERVAL_MINUTES=360
RUNTIME_RETENTION_KEEP_LAST=3

# External auth providers (future iteration)
AUTH_PROVIDER_MODE=external
AUTH_PROVIDER_URLS=
AUTH_PROVIDER_LOGIN_URL=
AUTH_PROVIDER_LOGIN_FIELD=username
AUTH_PROVIDER_PASSWORD_FIELD=password
AUTH_PROVIDER_TIMEOUT_SECONDS=15
AUTH_PROVIDER_ALLOW_DEV_FALLBACK=true

# Launcher self-update (optional, exposed in /api/public/bootstrap)
LAUNCHER_LATEST_VERSION=
LAUNCHER_UPDATE_URL=
LAUNCHER_RELEASE_NOTES=

# Admin launcher build (optional overrides for /api/admin/launcher/build)
# Leave empty to use auto-detection.
# Docker compose default: /workspace/launcher/BivLauncher.Client/BivLauncher.Client.csproj
LAUNCHER_BUILD_PROJECT_PATH=
LAUNCHER_BUILD_OUTPUT_ROOT=
LAUNCHER_BUILD_TIMEOUT_SECONDS=1200
INSTALL_TELEMETRY_ENABLED=true
DISCORD_RPC_ENABLED=true
DISCORD_RPC_PRIVACY_MODE=false

# Developer support contacts (shown in admin as read-only block)
DEV_SUPPORT_NAME=Bivashka
DEV_SUPPORT_TELEGRAM=https://t.me/bivashka
DEV_SUPPORT_DISCORD=bivashka
DEV_SUPPORT_WEBSITE=https://github.com/bivashka
DEV_SUPPORT_NOTES=Official developer support contact. Not editable from admin UI.
